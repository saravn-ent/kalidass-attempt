---
import Layout from '../layouts/Layout.astro';
import QuotationEngine from '../components/QuotationEngine.jsx';
import DriverFeeEstimator from '../components/DriverFeeEstimator.astro';
import VehicleRelocationCalculator from '../components/VehicleRelocationCalculator.jsx';
---

<Layout title="Trip Cost Calculator | Kalidass Travels" description="Calculate the cost for acting drivers and vehicle relocation services.">
  <div class="bg-slate-50 min-h-screen pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-slate-900 mb-4">
          <span class="lang-en">Trip Cost Calculator</span>
          <span class="lang-ta">பயண செலவு கணிப்பான்</span>
        </h1>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          <span class="lang-en">Estimate your travel costs instantly for our acting driver and vehicle relocation services.</span>
          <span class="lang-ta">எங்கள் ஆக்டிங் டிரைவர் மற்றும் வாகன இடமாற்ற சேவைகளுக்கான பயண செலவுகளை உடனடியாக மதிப்பிடுங்கள்.</span>
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
        {/* Oneway / Round Trip Calculator */}
        <div class="w-full flex justify-center">
          <QuotationEngine 
            client:load 
            showAirportTab={false} 
            showBookingButton={false} 
            title="Taxi Fare Estimator"
            variant="card"
          />
        </div>

        {/* Acting Driver Cost Calculator */}
        <div class="w-full flex justify-center">
          <DriverFeeEstimator />
        </div>

        {/* Vehicle Relocation Cost */}
        <div class="w-full flex justify-center lg:col-span-2">
          <VehicleRelocationCalculator client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>
