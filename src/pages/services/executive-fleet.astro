---
import Layout from "../../layouts/Layout.astro";
import ExecutiveFleet from "../../components/ExecutiveFleet.jsx";

const title = "Executive & VIP Fleet - Luxury Chauffeur Service";
const description =
    "Premium luxury vehicles with professional chauffeurs for executives, VIPs, and high-profile clients. Mercedes, BMW, and Toyota Vellfire with elite service standards.";

const schema = {
    "@context": "https://schema.org",
    "@type": "Service",
    name: title,
    description: description,
    provider: {
        "@type": "Organization",
        name: "Kalidass Travels",
    },
};
---

<Layout
    title={`${title} - Kalidass Travels`}
    description={description}
    schema={schema}
>
    <ExecutiveFleet client:load />
</Layout>
