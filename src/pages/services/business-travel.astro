---
import Layout from "../../layouts/Layout.astro";
import BusinessTravel from "../../components/BusinessTravel.jsx";

const title = "On-Demand Business Travel - Premium Corporate Cab Service";
const description =
    "Professional chauffeur services for corporate travel, client meetings, and airport transfers. Fixed rates, no surge pricing, bill-to-company facility with GST invoices.";

const schema = {
    "@context": "https://schema.org",
    "@type": "Service",
    name: title,
    description: description,
    provider: {
        "@type": "Organization",
        name: "Kalidass Travels",
    },
};
---

<Layout
    title={`${title} - Kalidass Travels`}
    description={description}
    schema={schema}
>
    <BusinessTravel client:load />
</Layout>
