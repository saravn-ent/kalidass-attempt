---
import Layout from "../../layouts/Layout.astro";
import EmployeeTransportation from "../../components/EmployeeTransportation.jsx";

const title = "Employee Transportation Services (ETS)";
const description =
    "Safe, punctual daily commute solutions for your workforce with automated rostering, real-time tracking, and route optimization.";

const schema = {
    "@context": "https://schema.org",
    "@type": "Service",
    name: title,
    description: description,
    provider: {
        "@type": "Organization",
        name: "Kalidass Travels",
    },
};
---

<Layout
    title={`${title} - Kalidass Travels`}
    description={description}
    schema={schema}
>
    <EmployeeTransportation client:load />
</Layout>
