---
import siteContent from '../data/siteContent.json';
const services = siteContent.services;
---

<section id="services" class="py-10 md:py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-4xl font-extrabold text-gray-900 inline-block relative mb-3">
        <span class="lang-en">Our Services</span>
        <span class="lang-ta hidden">எங்கள் சேவைகள்</span>
        <div class="absolute bottom-[-8px] left-1/2 transform -translate-x-1/2 w-16 h-1 bg-red-600 rounded-full"></div>
      </h2>
      <p class="text-base text-gray-600 max-w-2xl mx-auto mt-2">
        <span class="lang-en">Comprehensive travel solutions for every occasion</span>
        <span class="lang-ta hidden">ஒவ்வொரு சந்தர்ப்பத்திற்கும் ஏற்ற பயண தீர்வுகள்</span>
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6">
      {services.map((service) => (
        <a href={service.link} class="group relative h-60 sm:h-80 rounded-xl overflow-hidden shadow-sm border border-gray-100 cursor-pointer block">
          <!-- Background Image -->
          <img 
            src={service.image} 
            alt={service.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
          
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity duration-300"></div>

          <!-- Content -->
          <div class="absolute inset-0 flex flex-col justify-end p-3 sm:p-6">
            <h3 class="text-sm sm:text-2xl font-bold text-white mb-1 sm:mb-2 leading-tight">
              <span class="lang-en">{service.title}</span>
              <span class="lang-ta hidden">{service.title_ta}</span>
            </h3>
            <p class="text-gray-300 text-[10px] sm:text-sm line-clamp-2 sm:line-clamp-3">
              <span class="lang-en">{service.description}</span>
              <span class="lang-ta hidden">{service.description_ta}</span>
            </p>
          </div>
        </a>
      ))}
    </div>

  </div>
</section>
