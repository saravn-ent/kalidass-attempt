---
import siteContent from '../data/siteContent.json';
const reviews = siteContent.reviews.slice(0, 5);
---

<section id="reviews" class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-4xl font-extrabold text-gray-900 inline-block relative mb-3">
        Client Reviews
        <div class="absolute bottom-[-8px] left-1/2 transform -translate-x-1/2 w-16 h-1 bg-red-600 rounded-full"></div>
      </h2>
    </div>

    <!-- Reviews Scroll -->
    <div class="flex overflow-x-auto gap-4 pb-6 scrollbar-hide snap-x">
      {reviews.map((review) => (
        <div class="flex-none w-64 sm:w-80 bg-white p-6 rounded-xl shadow-sm border border-gray-100 snap-center flex flex-col justify-between">
          <div>
            <div class="flex items-center justify-between mb-3">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center text-white text-xs font-bold shadow-sm">
                  {review.name.charAt(0)}
                </div>
                <div>
                  <span class="block text-sm font-bold text-gray-900 leading-none">{review.name}</span>
                  <div class="flex text-yellow-400 text-[10px] mt-1">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                  </div>
                </div>
              </div>
              <div class="text-blue-500 opacity-20">
                <i class="fab fa-google text-xl"></i>
              </div>
            </div>
            <p class="text-sm text-gray-600 italic leading-relaxed">"{review.quote}"</p>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-6">
      <a href="https://maps.app.goo.gl/i2LdJhWMi2ZgAiCa8" target="_blank" class="inline-flex items-center text-blue-600 font-bold text-sm hover:text-blue-700 transition">
        See More Reviews on Google <i class="fas fa-arrow-right ml-2"></i>
      </a>
    </div>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
