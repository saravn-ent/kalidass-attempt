---
const partners = [
  { name: "Airport Authority of India", logo: "/images/partners/airport-chennai.png" },
  { name: "L&T", logo: "/images/partners/landt.webp" },
  { name: "Reliance Jio", logo: "/images/partners/jio.jpg" },
  { name: "Savaari", logo: "/images/partners/Savaari.png" },
  { name: "Saravn Enterprises", logo: "/images/partners/saravn.png" },
  { name: "Cognizant", logo: "/images/partners/Cognizant.png" }
];

// Duplicate for infinite scroll
const scrollingPartners = [...partners, ...partners, ...partners]; 
---

<section class="py-10 md:py-16 bg-gray-50 overflow-hidden border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 mb-12 text-center">
    <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 inline-block relative mb-4">
      Trusted By Industry Leaders
      <div class="absolute bottom-[-10px] left-1/2 transform -translate-x-1/2 w-20 h-1.5 bg-red-600 rounded-full"></div>
    </h2>
    <p class="text-lg text-gray-600 max-w-2xl mx-auto mt-4">
      Proud to serve these esteemed organizations
    </p>
  </div>

  <div class="relative w-full max-w-6xl mx-auto">
    <!-- Gradient Masks -->
    <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-gray-50 to-transparent z-10"></div>
    <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-gray-50 to-transparent z-10"></div>

    <!-- Scrolling Track -->
    <div class="flex w-max animate-scroll hover:pause items-center">
      {scrollingPartners.map((partner) => (
        <div class="flex-shrink-0 mx-8 md:mx-12 w-32 md:w-40 flex items-center justify-center">
          {partner.logo ? (
            <img 
              src={partner.logo} 
              alt={partner.name} 
              class="max-w-full max-h-16 md:max-h-20 object-contain grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-500 transform hover:scale-110"
            />
          ) : (
            <span class="font-bold text-gray-400 text-lg">{partner.name}</span>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.33%); } /* Move by 1/3rd since we tripled the list */
  }
  .animate-scroll {
    animation: scroll 30s linear infinite;
  }
  .hover\:pause:hover {
    animation-play-state: paused;
  }
</style>