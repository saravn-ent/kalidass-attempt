      function toggleLanguage() {
        const isTamil = document.body.classList.toggle('lang-ta');
        localStorage.setItem('preferred-lang', isTamil ? 'ta' : 'en');
        
        // Toggle visibility of all lang elements
        document.querySelectorAll('.lang-en').forEach(el => {
          el.classList.toggle('hidden', isTamil);
        });
        document.querySelectorAll('.lang-ta').forEach(el => {
          el.classList.toggle('hidden', !isTamil);
        });
      }

      // Initialize Language
      function initLanguage() {
        const savedLang = localStorage.getItem('preferred-lang');
        if (savedLang === 'ta') {
          document.body.classList.add('lang-ta');
          document.querySelectorAll('.lang-en').forEach(el => el.classList.add('hidden'));
          document.querySelectorAll('.lang-ta').forEach(el => el.classList.remove('hidden'));
        }
      }

      langToggleDesktop?.addEventListener('click', toggleLanguage);
      langToggleMobile?.addEventListener('click', toggleLanguage);
      
      // Run on load
      initLanguage();
    </script>
